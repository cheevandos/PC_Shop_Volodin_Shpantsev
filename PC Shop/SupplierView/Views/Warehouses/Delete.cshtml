@model PC_Shop_Database_Implementation.Models.Warehouse

@{
    ViewData["Title"] = "Удаление склада";
}

<div class="text-center">
    <h1 class="display-4">Удаление склада</h1>
</div>

<div class="text-left">
    <h3>Действительно удалить склад? (при удалении удалятся все компоненты)</h3>
</div>

<hr />

<div>
    <h4>Склад №@Model.ID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>

<hr />

<p>
    <a class="btn btn-outline-secondary" asp-action="List">Вернуться к списку складов</a>
</p>
