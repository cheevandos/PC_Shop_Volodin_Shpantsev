@model PC_Shop_Database_Implementation.Models.Warehouse

@{
    ViewData["Title"] = "Удаление склада";
}

<h1>Удаление склада</h1>

<h3>Действительно удалить склад? (при удалении удалятся все компоненты)</h3>
<div>
    <h4>Склад №@Model.ID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <p></p>
    <form asp-action="List">
        <input type="submit" value="Вернуться к списку складов" class="btn btn-primary" /> 
    </form>
</div>
