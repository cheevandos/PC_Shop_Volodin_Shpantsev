@model Dictionary<int, (string, int, int)>

@{
    ViewData["Title"] = "Склад";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Main">Заявки </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Warehouses" asp-action="List">Склады </a>
            </li>
        </ul>
    </div>
}

<h1>Список компонентов</h1>

<h2>Склад №@ViewBag.WarehouseID</h2>

<p>
    <a asp-controller="Components" asp-action="List" asp-route-warehouseID="@ViewBag.WarehouseID">Пополнить склад</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Комплектующее
            </th>
            <th>
                Свободно
            </th>
            <th>
                Зарезервировано
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item3)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="List">Вернуться к списку складов</a>
</div>
