@model IEnumerable<PC_Shop_Business_Logic.View_Models.RequestViewModel>

@{
    ViewData["Title"] = "Аккаунт";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Warehouses" asp-action="List">Склады</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="DateChoice">Отчет</a>
            </li>
        </ul>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Список заявок</h1>
</div>

<hr />

<div class="text-left">
    <h3>Поставщик: @Program.Supplier.FullName</h3>
</div>

<hr/>

<table class="table table-hover table-bordered">
    <thead class="thead thead-light">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CompletionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CompletionDate)
                </td>
                <td class="text-center">
                    @if (item.Status == PC_Shop_Business_Logic.Enums.RequestStatus.Обрабатывается)
                    {
                        <a class="btn btn-outline-info btn-sm" asp-action="RequestView" asp-route-id="@item.ID">Просмотр заявки</a>
                    }
                    @if (item.Status == PC_Shop_Business_Logic.Enums.RequestStatus.Создана)
                    {
                        <a class="btn btn-outline-info btn-sm" asp-action="AcceptRequest" asp-route-id="@item.ID">Принять в обработку</a>
                    }
                    @if (item.Status == PC_Shop_Business_Logic.Enums.RequestStatus.Исполнена)
                    {
                        <a class="btn btn-outline-primary btn-sm" asp-action="SendWordReport" asp-route-id="@item.ID">Отчет Word</a>
                        <a class="btn btn-outline-success btn-sm" asp-action="SendExcelReport" asp-route-id="@item.ID">Отчет Excel</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
