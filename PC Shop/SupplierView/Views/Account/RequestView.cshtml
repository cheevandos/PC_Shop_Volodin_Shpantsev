@model Dictionary<int, (string, int)>
@{
    ViewData["Title"] = "Заявка";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Main">Заявки</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Warehouses" asp-action="List">Склады</a>
            </li>
        </ul>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Заявка № @ViewBag.RequestID</h1>
</div>

<div class="text-left">
    <h3>Поставщик: @Program.Supplier.FullName</h3>
</div>

<hr />

<table class="table table-hover table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                Комплектующее
            </th>
            <th>
                Количество
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item2)
                </td>
                <td>
                    <a class="btn btn-outline-success btn-sm" asp-action="" asp-route-id="@item.Key">Зарезервировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>